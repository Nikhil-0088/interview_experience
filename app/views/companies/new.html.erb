<%= render 'error'%>
<div class="container text-center">
<%= form_with(model: @company, local: true, class: "card-body cardbody-color p-lg-5") do |f|%>
    <%=f.text_field :name ,placeholder: "Enter Company name:", class: "form-control"%>
    <%=f.submit "Add Company",class:"btn btn-color px-5 mb-5 w-100"%>
<%end%>
 <h3>Pending Suggestions from users!</h3>
</div>
<div class="container d-flex">
   <%@pending_companies.each do |company| %> 
   <div class="card text-center m-2" style="width:200px;"> 
    <div class="card-title">
           <h5><%= company.name%></h5>
    </div>
    <div class="card-body">
     <%= link_to "Approve",company_approve_path(company_id: company.id),method: :patch,class:"btn btn-success m-2"%>
     <%= link_to "Delete",remove_path(company_id: company.id),method: :delete,data:{ confirm: "Are you sure?"},class:"btn btn-danger"%>
    </div>
    </div>
   <%end%>
</div>