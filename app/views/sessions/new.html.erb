
<div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2 class="text-center text-dark mt-5">Create Account</h2>
        <div class="card my-5">
  <%= form_with(scope: :sessions,url: login_path,local: true, class: "card-body cardbody-color p-lg-5") do |f|%>
            <div class="text-center">
              <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">
            </div>
            <div class="mb-3">
                <%=f.email_field :email ,placeholder: "Enter Your Email", class: "form-control"%>
            </div>
            <div class="mb-3">
              <%=f.password_field :password, class: "form-control",placeholder: "Password"%> 
            </div>
            <div class="text-center"><%=f.submit "Log In",class:"btn btn-color px-5 mb-5 w-100"%></div>
            <div id="emailHelp" class="form-text text-center mb-5 text-dark">Not
              Registered? 
              <%= link_to " Create Account",new_user_path, class:"text-dark fw-bold" %>
            </div>
        <%end%>
        </div>

      </div>
    </div>
  </div>
  


