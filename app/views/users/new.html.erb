<head>
<style>
  #emailHelp{
    margin-top: -3rem;
    margin-bottom: 0;
  }
</style>
</head>
<%=render 'error'%>
<div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-3">
        <div class="card">
  <%= form_with(model: @user, local: true, class: "card-body cardbody-color p-lg-5") do |f|%>
            <div class="text-center">
              <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                width="200px" alt="profile">
            </div>
               <div class="mb-1">
                <%=f.text_field :name ,placeholder: "Enter Your Name", class: "form-control"%>
            </div>
            <div class="mb-1">
                <%=f.email_field :email ,placeholder: "Enter Your Email", class: "form-control"%>
            </div>
            <div class="mb-1">
              <%=f.password_field :password, class: "form-control",placeholder: "Password"%> 
            </div>
             <div class="mb-1">
                 <%= f.label :profile_picture %>
                 <%= f.file_field :profile_picture,class:'form-control'%>
            </div>
            <div class="text-center"><%=f.submit "Create Account",class:"btn btn-color px-5 mb-5 w-100"%></div>
            <div id="emailHelp" class="form-text text-center text-dark ">Already
              Registered? 
              <%= link_to "Log In ",login_path, class:"text-dark fw-bold" %>
            </div>
        <%end%>
        </div>

      </div>
    </div>
  </div>
  


