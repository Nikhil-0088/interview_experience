<head>
    <style>
        .all-companies{
            width:600px;
        }
        .holder{
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
    <div class="container mt-2">
    	<div class="row">
    	    <div class="col-md-3"></div>
    		
    		<!--Profile Card 3-->
    		<div class="col-md-6">
    		        <div class="profile-thumb-block">
                    <% if @user.profile_picture.attached? %>
                       <%= image_tag @user.profile_picture,class:"profile",style:"width: 120px; height: 99px;"%>
                    <% else %>
                       <img src='https://avatar.iran.liara.run/public/boy?username=Ash' style="width: 120px; height: 99px;" alt="profile-image" class="profile"/>
                    <% end %>
    		        </div>
    		        <div class="card-content">
                    <span style="font-size: 20px; font-weight: 600;"><%= @user.name%></span>
                    <span style="font-size: 10px; font-weight: 300;"><%= @user.email%></span>
                    <div >
                         <%= pluralize(@user.experiences.count,"Experience")%>
                         <% if logged_in? && current_user==@user%>
                         <%=link_to "Edit Profile", edit_user_path(@user),class:"btn btn-primary"%>
                         <%end%>
                    </div>
                    </div>
    		</div>
    	</div>
    </div>
   <% if logged_in? && current_user==@user%>
   <%= link_to "Liked Experience", liked_path,class:"btn btn-primary"%>
   <%end%>
<h4>Experiences Written by You</h4>
 <%= render 'shared/experiences'%>
<h4>Companies You follow</h4>
<div class="holder">
<div class="all-companies">
<%= render 'shared/companies'%>
</div>
</div>
